extends layout

block body
  .top-wrapper
    .getdown-top(ng-controller='floatCtrl')
      a.main-nav.blackground(href='#main', du-smooth-scroll duration='1100', du-scrollspy='', offset='', ng-click=' dude()', ng-hide='clicked')
        .neon
          span.on WAN
          span.on.out N
          span.on A
